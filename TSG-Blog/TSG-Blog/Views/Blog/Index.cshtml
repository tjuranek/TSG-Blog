@model List<TSG_Blog.Models.Post>

@{
    ViewBag.Title = "Index";
}

    <div class="row">

        @foreach (var post in Model)
        {
            <div class="col-12">
                <div class="card">
                    <h5 class="card-header">@post.Title - </h5>
                    <div class="card-body">
                        <p class="card-text">@post.Content</p>
                        <p>@post.Date</p>
                    </div>
                </div>
            </div>
        }

    </div>